---
import Nav from '../components/main/nav.astro';
const { children, title = 'Insano Network' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="bg-shapes">
    <Nav />
    <main class="main-layout-content">
      {children}
    </main>
    <style>
      body.bg-shapes {
        min-height: 100vh;
        margin: 0;
        background: linear-gradient(135deg, #232526 0%, #414345 100%);
        overflow-x: hidden;
      }
      body.bg-shapes::before {
        content: '';
        position: fixed;
        top: -100px;
        left: -100px;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle at 30% 30%, #ffd60055 0%, transparent 70%);
        z-index: 0;
        pointer-events: none;
      }
      body.bg-shapes::after {
        content: '';
        position: fixed;
        bottom: -120px;
        right: -120px;
        width: 700px;
        height: 700px;
        background: radial-gradient(circle at 70% 70%, #00eaff33 0%, transparent 80%);
        z-index: 0;
        pointer-events: none;
      }
      .main-layout-content {
        position: relative;
        z-index: 2;
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem 2rem 6rem 2rem;
        color: #fff;
      }
      h1, h2 {
        font-family: 'Atkinson', sans-serif;
      }
    </style>
  </body>
</html> 
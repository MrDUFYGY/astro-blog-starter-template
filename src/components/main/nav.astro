<script>
const proyectosLink = document.getElementById('navbarmain-proyectos-link');
const proyectosDialog = document.getElementById('navbarmain-proyectos-dialog');

if (proyectosLink && proyectosDialog) {
  const dialog = proyectosDialog;
  // @ts-ignore
  const dialogEl = dialog as HTMLDialogElement;
  // Abrir el dialog al hacer click o hover
  proyectosLink.addEventListener('mouseenter', () => {
    dialogEl.show();
    proyectosLink.setAttribute('aria-expanded', 'true');
  });
  proyectosLink.addEventListener('mouseleave', () => {
    setTimeout(() => {
      if (!dialogEl.matches(':hover')) {
        dialogEl.close();
        proyectosLink.setAttribute('aria-expanded', 'false');
      }
    }, 100);
  });
  dialogEl.addEventListener('mouseleave', () => {
    dialogEl.close();
    proyectosLink.setAttribute('aria-expanded', 'false');
  });
  dialogEl.addEventListener('mouseenter', () => {
    dialogEl.show();
    proyectosLink.setAttribute('aria-expanded', 'true');
  });
  // También abrir/cerrar con click
  proyectosLink.addEventListener('click', (e) => {
    e.preventDefault();
    if (dialogEl.open) {
      dialogEl.close();
      proyectosLink.setAttribute('aria-expanded', 'false');
    } else {
      dialogEl.show();
      proyectosLink.setAttribute('aria-expanded', 'true');
    }
  });
}
